<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    tools:context="info.androidhive.appzan.MapsActivity"
    android:weightSum="1">


    <EditText
        android:id="@+id/WybierzLokacjeEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
        android:hint="Wybierz lokację"
        android:inputType="textPersonName"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/ZmienLokacjeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zmień lokację"
        android:layout_gravity="center"
        android:onClick="goToLocation"/>

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="info.androidhive.appzan.MapsActivity" />

</LinearLayout>
